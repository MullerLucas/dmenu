#!/bin/sh

# =========================================================
# Setup
# =========================================================
prompt="config:"

declare -A configPaths

configPaths["alacritty"]=".config/alacritty/alacritty.yml"
configPaths["alacritty_in"]=".config/alacritty/alacritty.yml.in"

configPaths["awesome"]=".config/awesome/rc.lua"
configPaths["awesome_vars"]=".config/awesome/variables.lua"
configPaths["awesome_keys"]=".config/awesome/globalKeyBinds.lua"
configPaths["awesome_rules"]=".config/awesome/rules.lua"
configPaths["awesome_theme"]=".config/awesome/themes/default/theme.lua"

configPaths["bspwm"]=".config/bspwm/bspwmrc"

configPaths["mangohud"]=".config/MangoHud/MangoHud.conf"

configPaths["newsboat"]=".newsboat/config"

configPaths["newsboat_urls"]=".newsboat/urls"

configPaths["sxhdk"]=".config/sxhkd/sxhkdrc"

configPaths["xresources"]=".config/xresources/Xresources"
configPaths["xresources_colors"]=".config/xresources/colorSchemes/faint.xres"

configPaths["zshrc"]=".zshrc"
configPaths["zshrc_aliases"]=".config/zsh/aliases.zsh"
configPaths["zshrc_antigen"]=".config/zsh/antigen.zsh"

# =========================================================
# Run dmenu
# =========================================================
selection=$(printf '%s\n' ${!configPaths[@]} | dmenu -i -m 0 -p $prompt)

# Open selection
[ -z ${selection} ] && exit 1

# Open in nvim
# alacritty --hold -e nvim ~/${configPaths[$selection]}

# Open in Emacs
emacs ~/${configPaths[$selection]}



